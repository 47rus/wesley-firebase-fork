rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // SEO and Events data should be public for search engines and users
    match /seo/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /events/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /news/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /logos/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // Default deny for all other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
