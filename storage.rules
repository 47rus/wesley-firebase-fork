rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files in the 'images' folder
    match /images/{allPaths=**} {
      allow read: if true;
    }

    // For all other paths, require authentication
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
